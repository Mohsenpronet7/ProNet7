name: Update Subscription

# زمان‌بندی اجرا
on:
  schedule:
    - cron: "0 * * * *" # هر یک ساعت
  workflow_dispatch:      # امکان اجرا دستی

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      # مرحله ۱: گرفتن کد از ریپو
      - uses: actions/checkout@v3

      # مرحله ۲: نصب Python
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      # مرحله ۳: نصب کتابخانه‌ها
      - run: pip install -r requirements.txt

      # مرحله ۴: اجرای اسکریپت اصلی
      - run: python main.py

      # مرحله ۵: Commit و Push فایل‌های خروجی
      - name: Commit and Push
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "actions@github.com"
          git add output.txt index.html
          git commit -m "Auto update subscription"
          git push
